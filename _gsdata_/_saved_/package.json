{
  "name": "storefront_backend",
  "version": "0.1.0",
  "description": "",
  "main": "server.ts",
  "scripts": {
    "build": "npx tsc",
    "start": "npm run build && node dist/server.js",
    "watch": "tsc-watch --esModuleInterop src/server.ts --outDir ./dist --onSuccess \"node ./dist/server.js\"",
    "first_run": "npm run create_dbs && db-migrate up && npm run watch",
    "test_db_up": "db-migrate up --e test",
    "test_db_reset": "db-migrate reset --e test",
    "jasmine_ts": "jasmine-ts src/tests/**/*[sS]pec.ts",
    "test": "set ENV=test&& npm run test_db_reset && npm run test_db_up && npm run jasmine_ts && npm run test_db_reset",
    "create_dbs": "npx ts-node src/utils/create_dbs.ts",
    "drop_dbs": "npx ts-node src/utils/drop_dbs.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint --fix src/**/*.ts",
    "prettier": "prettier --config .prettierrc --write src/**/*.ts ",
    "checkrules": "npx eslint-config-prettier src/server.ts",
    "test_short": "set ENV=test&& db-migrate --env test up && jasmine-ts && db-migrate db:drop test",
    "test3": "set ENV=test&& jasmine-ts src/tests/**/*[sS]pec.ts",
    "test1": "set ENV=test&& set NODE_OPTIONS=--loader=ts-node/esm && jasmine",
    "trial": "set ENV=dev&& npx ts-node src/trial.ts",
    "trial2": "set ENV=dev&& npx ts-node src/trial2.ts"
  },
  "author": "Udacity",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "*5.1.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "db-migrate": "*0.11.13",
    "db-migrate-pg": "*1.2.2",
    "dotenv": "*16.0.3",
    "express": "^4.18.2",
    "jsonwebtoken": "*9.0.0",
    "pg": "*8.9.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.9",
    "@types/jasmine": "^3.10.2",
    "@types/jasmine-reporters": "^2.5.0",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.11.18",
    "@types/pg": "^8.6.6",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.47.0",
    "@typescript-eslint/parser": "^5.47.0",
    "eslint": "^8.30.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jasmine": "^3.99.0",
    "jasmine-reporters": "^2.5.2",
    "jasmine-spec-reporter": "^7.0.0",
    "jasmine-ts": "^0.3.0",
    "morgan": "^1.10.0",
    "prettier": "^2.8.1",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "tsc-watch": "^6.0.0",
    "typescript": "^4.1.3"
  }
}